@model PhotosEditorViewModel

@{
    ViewData["Title"] = "Редактирование фото";
}

<h2>@ViewData["Title"]</h2>

<h4>Фото</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(m => m.Photo.Id)
            @Html.HiddenFor(m => m.Photo.Source)
            @Html.HiddenFor(m => m.Photo.LowSource)
            <div class="form-group">
                @Html.LabelFor(m => m.PhotoFile, new { @class = "control-label" })
                @Html.EditorFor(m => m.PhotoFile, new { htmlAttributes = new { @class = "form-control-file" } })
                @Html.ValidationMessageFor(m => m.PhotoFile, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Photo.Name, new { @class = "control-label" })
                @Html.EditorFor(m => m.Photo.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Photo.Name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Photo.Description, new { @class = "control-label" })
                @Html.EditorFor(m => m.Photo.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Photo.Description, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Photo.VotersCount, new { @class = "control-label" })
                @Html.EditorFor(m => m.Photo.VotersCount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Photo.VotersCount, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Photo.RatingSum, new { @class = "control-label" })
                @Html.EditorFor(m => m.Photo.RatingSum, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Photo.RatingSum, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
