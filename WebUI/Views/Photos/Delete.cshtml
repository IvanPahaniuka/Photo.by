@model Photo

@{
    ViewData["Title"] = "Удаление фото";
}

<h2>@ViewData["Title"]</h2>

<h3>Вы уверены, что хотите удалить фото?</h3>
<div>
    <h4>Фото</h4>
    <hr />
    <img src="@Model.Source" alt="*Исходное изображение*" style="width: 25%">
    <img src="@Model.LowSource" alt="*Обрезанное изображение*" style="width: 15%">
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Source)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Source)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.VotersCount)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.VotersCount)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.RatingSum)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RatingSum)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-default" /> |
        <a asp-action="Index">Вернуться к списку</a>
    </form>
</div>
