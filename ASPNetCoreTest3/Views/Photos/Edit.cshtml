@model ASPNetCoreTest3.Models.Photo

@{
    ViewData["Title"] = "Редактирование фото";
}

<h2>@ViewData["Title"]</h2>

<h4>Фото</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Source" />
            <input type="hidden" asp-for="LowSource" />
            <div class="form-group">
                <label for="imageFile" class="control-label">Изображение</label>
                <input type="file" name="imageFile" accept="image/*" class="form-control-file" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VotersCount" class="control-label"></label>
                <input asp-for="VotersCount" class="form-control" />
                <span asp-validation-for="VotersCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RatingSum" class="control-label"></label>
                <input asp-for="RatingSum" class="form-control" />
                <span asp-validation-for="RatingSum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
